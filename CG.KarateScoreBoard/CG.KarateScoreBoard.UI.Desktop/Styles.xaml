<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:CG.KarateScoreBoard.UI.Desktop">
    <SolidColorBrush x:Key="boardForeground" Color="#FFFFFF" />
    <SolidColorBrush x:Key="boardBackground" Color="#000000" />
    <Style TargetType="TextBlock" x:Key="boardText">
        <Setter Property="Foreground" Value="{StaticResource ResourceKey=boardForeground}" />
        <Setter Property="FontFamily" Value="./#SCORE BOARD" />
    </Style>
</ResourceDictionary>